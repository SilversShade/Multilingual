@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4 mb-4">Welcome to Multilingual!</h1>
</div>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.MainMenuItems)
    {
        <div class="container d-flex justify-content-center">
            <div class="card">
                <img src=@item.PathToImage class="card-img-top" alt="Not Found">
                <div class="card-body d-flex flex-column" style="height: 150px;">
                    <h5 class="card-title d-flex justify-content-center">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <div class="mt-auto d-flex justify-content-center">
                        <a asp-area=@item.AspArea asp-page=@item.AspPage class="btn btn-primary bg-dark border-dark">@item.ButtonText</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>